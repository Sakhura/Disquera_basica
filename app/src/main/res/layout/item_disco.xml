<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Nombre del disco -->
        <TextView
            android:id="@+id/tv_nombre_disco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre del Disco"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <!-- Artista -->
        <TextView
            android:id="@+id/tv_artista_disco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre del Artista"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="4dp" />

        <!-- Fila con género y precio -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <!-- Género -->
            <TextView
                android:id="@+id/tv_genero_disco"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Género"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"
                android:background="@drawable/rounded_genre"
                android:padding="4dp"
                android:textAlignment="center" />

            <!-- Precio -->
            <TextView
                android:id="@+id/tv_precio_disco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$25.99"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/holo_green_dark"
                android:layout_marginStart="16dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>